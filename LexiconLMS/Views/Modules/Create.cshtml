                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
         
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name ="Add" id ="Save" value="Save" class="btn btn-default" />
                <input type="submit" name="Add"  id ="SaveNew" value="Save & Add New" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { courseId = @ViewBag.CourseId })
</div>

