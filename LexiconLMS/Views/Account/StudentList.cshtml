@model IEnumerable<LexiconLMS.Models.UserViewModels>

@{
    ViewBag.Title = "StudentList";
}

@if (User.IsInRole("Student"))
{
    <h2>List of class mates in your course</h2>
}

@if (User.IsInRole("Teacher"))
{
    <h2>List of all students currently in the LMS</h2>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @if (User.IsInRole("Teacher"))
            {  /*koden nedan måste ändras till att peka till lämplig kontroller och måste även skicka med någon form av id.*/
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })  
                @Html.Raw(" | ") 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }

        </td>
    </tr>
}

</table>
